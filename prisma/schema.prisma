datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(uuid())
  email String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  recipes Recipe[]
}

model Recipe {
  id String @id @default(uuid())

  title String

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
